{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "removeComments": true,
    "noLib": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "lib"
  },
  "include": [
    "spec/**/*",
    "src/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "scripts",
    "lib"
  ]
}
